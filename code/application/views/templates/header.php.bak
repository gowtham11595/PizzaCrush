		$.getJSON('<?php echo base_url();?>get_data','title='+searched,function(result){

			var elements = [];

			$.each(result,function(i,val){
				elements.push(val.merchant_name)
				})

			$('#search_bar').autocomplete({
				source : elements,
				 select: function(event, ui) { 
				     $("input#search_bar").val(ui.item.value);
				     $("#get").click();
					   }
				})     

			})
		});

});

$(document).scroll(function (e) {
		if ($(document).scrollTop() >= 129) {
		$('.new_search_bar').show(200);
		} else {
		$('.new_search_bar').hide(200);
		}
